<prototype>
  <common>
    <method>IMC</method>
    <t_start>0.0</t_start>
    <t_stop>0.01</t_stop>
    <dt_start>0.001</dt_start>
    <t_mult>1.0</t_mult>
    <dt_max>1.0</dt_max>
    <photons>160000</photons>
    <seed>14706</seed>
    <tilt>FALSE</tilt>
    <stratified_sampling>FALSE</stratified_sampling>
    <use_combing>TRUE</use_combing>
    <output_frequency>1</output_frequency>
    <write_silo>TRUE</write_silo>
  </common>
 
  <debug_options>
    <print_verbose>TRUE</print_verbose>
    <print_mesh_info>TRUE</print_mesh_info>
  </debug_options>

  <random_spatial>
    <problem>
        <materials>2</materials>
        <distance>10.0</distance>
        <column_size>0.1</column_size>
        <chord_model>constant</chord_model>
        <geometry_seed>1234</geometry_seed>
        <sublayer_cells>10</sublayer_cells>
        <structured_cells>100</structured_cells>
        <realizations>10000</realizations>
        <realization_print>1</realization_print>
    </problem>

    <material>
        <ID>0</ID>
        <chord_start>0.1</chord_start>
        <chord_end>0.8</chord_end>
        <opacA>5.0</opacA>
        <opacB>0.0</opacB>
        <opacC>0.0</opacC>
        <opacS>0.0</opacS>
        <initial_T_e>1.0</initial_T_e>
        <initial_T_r>1.0</initial_T_r>
        <density>1.0</density>
        <CV>0.1</CV>
    </material>

    <material>
        <ID>1</ID>
        <chord_start>0.5</chord_start>
        <chord_end>0.3</chord_end>
        <opacA>50.0</opacA>
        <opacB>0.0</opacB>
        <opacC>0.0</opacC>
        <opacS>0.0</opacS>
        <initial_T_e>0.01</initial_T_e>
        <initial_T_r>0.01</initial_T_r>
        <density>1.0</density>
        <CV>0.1</CV>
    </material>
  </random_spatial>
 
</prototype>
